<header>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top py-1"
    style="background: rgba(0,0,0,0.2); backdrop-filter: blur(10px);">
    <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand fw-medium fs-3 text-white" href="#home">LuxCart</a>

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Nav Links -->
      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0 fs-5">
          <li class="nav-item"><a class="nav-link text-white px-3" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link text-white px-3" href="/cars-collection">Cars</a></li>
          <li class="nav-item"><a class="nav-link text-white px-3" href="/accessories">Accessories</a></li>
          <li class="nav-item"><a class="nav-link text-white px-3" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link text-white px-3" href="/about">About Us</a></li>

          {{#if user}}
          <!-- Mobile-only links for logged-in users -->
          <li class="nav-item d-lg-none"><a class="nav-link text-white px-3" href="/profile">Profile</a></li>
          <li class="nav-item d-lg-none"><a class="nav-link text-white px-3" href="/wishlist">Wishlist</a></li>
          <li class="nav-item d-lg-none"><a class="nav-link text-danger px-3" href="/logout">Logout</a></li>
          {{else}}
          <!-- Mobile-only links for not logged-in users -->
          <!-- <li class="nav-item d-lg-none"><a class="nav-link text-white px-3" href="/login">Login</a></li> -->
          <!-- <li class="nav-item d-lg-none"><a class="nav-link text-white px-3" href="/signup">Sign Up</a></li> -->
          {{/if}}
        </ul>

        <!-- Desktop Buttons / Icons -->
        <div class="d-flex gap-3 align-items-center">
          {{#if user}}
          <!-- Logged in: Cart + Profile Dropdown -->
          <a href="/cart" class="btn btn-outline-light border border-0 btn-md">
            <i class="bi bi-cart fs-5"></i>
          </a>

          <div class="dropdown">
            <button class="btn btn-outline-light btn-md border border-0 dropdown-toggle d-flex align-items-center"
              type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person fs-5"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="profileDropdown"
              style="backdrop-filter: blur(10px); background: rgba(0,0,0,0.3);">
              <li class="px-3 py-2 text-white">
                <strong>{{user.name}}</strong><br>
                <small>{{user.email}}</small>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item d-flex align-items-center text-white" href="/profile">
                  <i class="bi bi-person-circle me-2"></i> Profile</a></li>
              <li><a class="dropdown-item d-flex align-items-center text-white" href="/wishlist">
                  <i class="bi bi-heart me-2"></i> Wishlist</a></li>
              <li><a class="dropdown-item d-flex align-items-center text-danger" href="/logout">
                  <i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
            </ul>
          </div>
          {{else}}
          <!-- Not logged in: show on desktop -->
          <a href="/login" class="btn btn-outline-light btn-md border border-0">Login</a>
          <a href="/signup" class="btn btn-outline-light btn-md border border-0">Sign Up</a>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
</header>