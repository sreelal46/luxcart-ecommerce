<div class="container-fluid py-5 px-4">
  <!-- Title Section -->
  <div class="mb-5">
    <h3 class="page-title display-5 mt-5 mb-2">Our Collection</h3>
    <p class="section-subtitle">Discover our handpicked selection of exceptional automobiles.</p>
  </div>

  <!-- Search and Filter Row -->
  <div class="row">
    <!-- Filters Sidebar -->
    <div class="col-md-3 col-lg-2 mb-4">
      <div class="filter-sidebar p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h6 class="filter-title mb-0">Filters</h6>
          <a href="#" class="clear-filters">Clear All</a>
        </div>

        <!-- Brand Filter -->
        <h6 class="filter-title mt-4">Brand</h6>
        {{#each brands}}
        <div class="form-check mb-2">
          <input class="form-check-input" value="{{this.name}}" type="checkbox" />
          <label class="form-check-label" for="mercedes">{{this.name}}</label>
        </div>
        {{/each}}

        <!-- Category Filter -->
        <h6 class="filter-title mt-4">Category</h6>
        {{#each categories}}
        <div class="form-check mb-2">
          <input class="form-check-input" value="{{this.name}}" type="checkbox" />
          <label class="form-check-label" for="sedan">{{this.name}}</label>
        </div>
        {{/each}}
