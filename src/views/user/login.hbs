<div class="bg-light min-vh-100 d-flex align-items-center justify-content-center">
  <div class="bg-white rounded-3 shadow p-5" style="max-width: 500px; width: 100%;">

    <!-- Header -->
    <div class="text-center mb-4">
      <a class="h2 fw-bold text-dark text-decoration-none">{{alert}}</a>
      <a href="/" class="h2 fw-bold text-dark text-decoration-none">LuxCart</a>
      <h1 class="h4 fw-bold mt-3 mb-1">Welcome Back</h1>
      <p class="text-muted mb-0">Sign in to your account</p>
    </div>

    <!-- Form -->
    <form class="mt-4" action="/login" method="post">
      <div class="mb-3">
        <label for="email" class="form-label fw-medium small">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="your.email@example.com">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label fw-medium small">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="rememberMe">
          <label class="form-check-label small text-muted" for="rememberMe">
            Remember me
          </label>
        </div>
        <a href="/forgot-password-email-verification" class="small text-dark text-decoration-none">Forgot password?</a>
      </div>

      <button type="submit" class="btn btn-dark w-100 fw-medium">Sign In</button>
    </form>
    <!-- Google Sign Up Button -->
    <div class="d-grid mt-3">
      <a href="/auth/google" class="btn btn-outline-dark fw-medium d-flex align-items-center justify-content-center">
        <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" style="width:20px; height:20px;"
          class="me-2">
        continue with Google
      </a>
    </div>
    <!-- Signup link -->
    <div class="text-center mt-3">
      <p class="small text-muted mb-0">
        Don't have an account?
        <a href="/signup" class="text-dark fw-medium text-decoration-none">Sign up</a>
      </p>
    </div>
    <!-- Back to Home -->
    <div class="text-center mt-4">
      <a href="/" class="small text-muted text-decoration-none">&larr; Back to Home</a>
    </div>

  </div>
</div>