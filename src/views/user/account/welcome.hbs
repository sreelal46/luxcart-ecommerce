<style>
  /* Hero-style welcome (replace existing welcome styles) */
  #welcome.hero {
    min-height: 66vh;
    /* big, noticeable area */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 18px;
  }

  .welcome-card {
    display: flex;
    gap: 36px;
    align-items: center;
    width: 100%;
    max-width: 1100px;
    background: var(--card);
    padding: 36px;
    border-radius: 12px;
    box-shadow: 0 18px 40px rgba(16, 24, 40, 0.06);
  }

  /* left: avatar / visual */
  .welcome-visual {
    flex: 0 0 240px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .welcome-avatar {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    overflow: hidden;
    border: 6px solid #fff;
    box-shadow: 0 12px 30px rgba(2, 6, 23, 0.06);
    background: var(--soft);
  }

  .welcome-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* right: content */
  .welcome-content {
    flex: 1;
    text-align: left;
  }

  .welcome-icon-small {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: var(--soft);
    font-size: 22px;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .welcome-title {
    font-weight: 800;
    font-size: 34px;
    margin: 6px 0 8px;
    color: var(--accent);
  }

  .welcome-title small {
    font-weight: 700;
    color: inherit;
  }

  .welcome-text {
    color: var(--muted);
    font-size: 16px;
    max-width: 720px;
    margin-bottom: 18px;
    line-height: 1.6;
  }

  .welcome-actions {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn-ghost {
    background: transparent;
    border: 1px solid rgba(17, 17, 17, 0.06);
    color: var(--accent);
  }

  /* compact layout for narrow screens */
  @media (max-width: 991px) {
    .welcome-card {
      gap: 18px;
      padding: 28px;
    }

    .welcome-visual {
      flex-basis: 140px;
    }

    .welcome-avatar {
      width: 120px;
      height: 120px;
    }

    .welcome-title {
      font-size: 28px;
    }
  }

  @media (max-width: 575px) {
    #welcome.hero {
      min-height: auto;
      padding: 18px;
    }

    .welcome-card {
      flex-direction: column;
      text-align: center;
      padding: 22px;
    }

    .welcome-content {
      text-align: center;
    }

    .welcome-visual {
      order: -1;
      margin-bottom: 8px;
    }

    .welcome-avatar {
      width: 100px;
      height: 100px;
    }

    .welcome-title {
      font-size: 22px;
    }

    .welcome-text {
      font-size: 14px;
      max-width: 100%;
    }

    .welcome-actions {
      justify-content: center;
    }
  }
</style>

<section id="welcome" class="main-card mt-4 hero">
  <div class="welcome-card">
    <div class="welcome-visual">
      <!-- use uploaded image as avatar -->
      <div class="welcome-avatar">
        <img src="/mnt/data/c3d86212-c8a3-496d-be82-e7b630e8bdb2.png" alt="avatar">
      </div>
    </div>

    <div class="welcome-content">
      <h2 class="welcome-title">
        Welcome back, <small id="welcomeName">John Doe</small> <span aria-hidden="true">ðŸ‘‹</span>
      </h2>

      <p class="welcome-text">
        This is your account hub â€” update your profile, track orders, manage your wishlist and addresses,
        and access any account tools from the left menu. Everything is stored in one place for quick access.
      </p>

      <div class="welcome-actions">
        <button class="btn btn-dark" id="goToProfileBtn">Go to Profile</button>
        <button class="btn btn-ghost" id="goToOrdersBtn">View Orders</button>
      </div>
    </div>
  </div>
</section>

<script>
  // fill welcome name from sidebar
  const sidebarNameEl = document.getElementById('sidebarName');
  const welcomeName = (sidebarNameEl && sidebarNameEl.textContent.trim()) || 'User';
  document.getElementById('welcomeName').textContent = welcomeName;

  // function to activate nav link
  const clickNav = (path) => {
    const link = document.querySelector('.nav-acc .nav-link[href="' + path + '"]');
    if (link) {
      link.click();
    }
  };

  // buttons -> correct full paths
  document.getElementById('goToProfileBtn')
    .addEventListener('click', () => clickNav('/account/profile'));

  document.getElementById('goToOrdersBtn')
    .addEventListener('click', () => clickNav('/account/orders'));
</script>