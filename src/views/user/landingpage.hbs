<link rel="stylesheet" href="/css/user/landingPage.css">


<!-- Hero Section -->
<section class="hero-section position-relative text-center text-white">
  <!-- Video Background -->
  <video autoplay muted loop playsinline class="hero-video w-100 h-100" style="object-fit: cover;">
    <source src="video/1759420867867-1-desktop.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>

  <!-- Overlay (Optional for better text visibility) -->
  <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.5);"></div>

  <!-- Hero Section Text -->
  <div class="hero-content position-absolute text-center">
    <h1 class="hero-title display-3 fw-bold text-white hero-text">Automotive</h1>
    <p class="hero-subtitle lead text-white hero-text">
      Experience the epitome of luxury and performance with our curated collection of exceptional automobiles.
    </p>
    <a href="#featured-categories" class="btn btn-outline-light rounded-pill mt-3 hero-btn">Explore Cars</a>
  </div>
</section>


<!-- Premium Brands -->
<section class="premium-brands py-5 bg-light text-center">
  <h2 class="fw-bold fs-1 mb-4">Our Premium Brands</h2>

  <div class="brand-slider overflow-hidden">
    <div class="brand-slide-track">
      {{#each brands}}
      <img src="{{this.image_url}}" alt="{{this.name}}" class="brand-logo" />
      {{/each}}
      {{!-- Duplicate for seamless infinite loop --}}
      {{#each brands}}
      <img src="{{this.image_url}}" alt="{{this.name}}" class="brand-logo" />
      {{/each}}
    </div>
  </div>
</section>




<!-- Featured Categories -->
<section class="featured-categories py-5 bg-light" id="featured-categories">
  <div class="container-fluid text-center px-4">
    <h2 class="fw-bold display-5 mb-3">Featured Categories</h2>
    <p class="text-muted mb-5">
      Discover our handpicked selection of exceptional automobiles and accessories.
    </p>

    <div class="row g-3 justify-content-center">
      <!-- Luxury Cars -->
      <div class="col-lg-4 col-md-6">
        <a href="/cars-collection" style="text-decoration: none;">
          <div class="category-card card border-0 text-white overflow-hidden position-relative">
            <img src="https://c.animaapp.com/mgkggbftOxjBCn/img/hakon-sataoen-qyfco1nfmtg-unsplash-2.png"
              class="card-img" alt="Luxury Cars">
            <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-4">
              <h5 class="fw-bold">{{types.[0].name}}</h5>
              <p class="mb-0">Explore Collection
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Performance -->
      <div class="col-lg-4 col-md-6">
        <a href="/cars-collection" style="text-decoration: none;">
          <div class="category-card card border-0 text-white overflow-hidden position-relative">
            <img src="https://images.unsplash.com/photo-1502877338535-766e1452684a?auto=format&fit=crop&w=800&q=80"
              class="card-img" alt="Performance Cars">
            <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-4">
              <h5 class="fw-bold">{{types.[1].name}}</h5>
              <p class="mb-0">Explore Collection
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Limited Edition -->
      <div class="col-lg-4 col-md-6">
        <a href="/cars-collection" style="text-decoration: none;">
          <div class="category-card card border-0 text-white overflow-hidden position-relative">
            <img src="https://c.animaapp.com/mgkggbftOxjBCn/img/01-lvn-34-front-1.png" class="card-img"
              alt="Limited Edition">
            <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-4">
              <h5 class="fw-bold">{{types.[2].name}}</h5>
              <p class="mb-0">Explore Collection
              </p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Premium Accessories -->
<section class="premium-accessories py-5 bg-light" id="premium-accessories">
  <div class="container-fluid px-4 px-md-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap text-center text-md-start">
      <h2 class="fw-bold display-6 mb-5 mb-md-0">Premium Accessories</h2>
      <a href="/all-accessories" class="text-decoration-none fw-semibold text-dark hover-link">
        View All <img src="https://c.animaapp.com/mgkggbftOxjBCn/img/frame-2.svg" width="16" alt="arrow">
      </a>
    </div>

    <div class="row g-4 justify-content-center">
      <!-- Accessory 1 -->
      {{#each accessories}}
      <a href="/all-accessories/view-accessory-product/{{this._id}}" class="col-12 col-sm-6 col-md-4 col-lg-3"
        style="text-decoration: none;">

        <div class="accessory-card card border-0 shadow-sm h-100">
          <img src="{{this.images.[0]}}" class="card-img-top" alt="Carbon Fibre steering wheel">
          <div class="card-body text-center">
            <h6 class="fw-bold">{{this.name}}</h6>
            <p class="text-muted small">{{this.product_type_id.name}}</p>
            <p class="fw-bold text-dark mb-0">â‚¹ {{formatPrice this.price}}</p>
          </div>
        </div>

      </a>
      {{/each}}
    </div>
  </div>
</section>


<!-- Experience LuxCart -->
<section class="experience-luxcart py-5 text-center text-black rounded-4 mx-3">
  <div class="container">
    <h2 class="fw-bold mb-3">Experience LuxCart</h2>
    <p class="text-black mb-4">Join our exclusive community of automotive enthusiasts and be the first to know about our
      latest arrivals and special events.</p>
    <a href="#" class="btn btn-outline-black px-4 py-2 rounded-pill text-black">Join Now</a>
  </div>
</section>

<!-- Landing Page JS -->
<script src="/js/user/landingPage.js" defer></script>