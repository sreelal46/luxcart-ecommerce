<style>
  .admin-orders-table {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
  }

  /* Product column handling */
  .admin-orders-table .product-col {
    max-width: 360px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Status badges */
  .status-badge {
    padding: 6px 12px;
    font-size: 0.75rem;
    text-transform: capitalize;
  }

  .status-badge.placed {
    background-color: #198754;
  }

  .status-badge.cancelled {
    background-color: #dc3545;
  }

  .status-badge.shipped {
    background-color: #0d6efd;
  }

  .status-badge.delivered {
    background-color: #20c997;
  }

  /* Table spacing */
  .admin-orders-table th,
  .admin-orders-table td {
    vertical-align: middle;
  }

  /* Hover effect */
  .admin-orders-table tbody tr:hover {
    background-color: #f8f9fa;
  }

  .btn-cancel {
    background-color: #fff;
    border: 2px solid #dc3545;
    color: #dc3545;
  }

  .btn-cancel:hover {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-return {
    background-color: #fff;
    border: 2px solid #0d6efd;
    color: #0d6efd;
  }

  .btn-return:hover {
    background-color: #0d6efd;
    color: #fff;
  }
</style>

<div class="container py-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Orders Management</h2>
    <div class="d-flex">
      <a href="/admin/orders-management/cancel-request-management">
        <button class="btn btn-cancel btn-md me-2 shadow-sm">
          <i class="bi bi-x-circle me-2"></i> Cancel Requests
        </button>
      </a>

      <a href="/admin/orders-management/return-request-management">
        <button class="btn btn-return btn-md me-2 shadow-sm">
          <i class="bi bi-arrow-repeat me-2"></i> Return Requests
        </button>
      </a>

      <!-- <button class="btn btn-success btn-md shadow-sm">
        <i class="bi bi-download me-2"></i> Export Orders
      </button> -->
    </div>
  </div>

  <!-- Search & Filter -->
  <div class="d-flex justify-content-between mb-3">
    <input type="text" id="searchOrderInput" class="form-control w-50"
      placeholder="Search by Order ID, Customer, Product">
    <button class="btn btn-primary ms-2" data-bs-toggle="modal" data-bs-target="#filterOrderModal">
      <i class="bi bi-funnel"></i> Filter
    </button>
  </div>

  <!-- Orders Table Card -->
  <div class="card shadow-sm rounded-4 p-4">
    <div class="table-responsive">
      <table class="table table-hover align-middle admin-orders-table">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Items</th>
            <th>Date</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>

        <tbody id="ordersTableBody">
          {{#each orders}}
          <tr>
            <!-- Row Number -->
            <td class="fw-semibold">{{inc @index}}</td>

            <!-- Order ID -->
            <td class="fw-bold text-muted small">
              {{this.orderId}}
            </td>

            <!-- Customer -->
            <td>
              {{this.address.name}}
            </td>

            <!-- Product -->
            <td class="product-col">
              {{this.items.length}}
            </td>

            <!-- Date -->
            <td class="text-nowrap">
              {{formattedDate this.createdAt}}
            </td>
            <!-- Action -->
            <td class="text-center">
              <a href="/admin/orders-management/view-order/{{this._id}}" class="btn btn-sm btn-info">
                <i class="bi bi-eye-fill"></i>
                View
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterOrderModal" tabindex="-1" aria-labelledby="filterOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-bold" id="filterOrderModalLabel"><i class="bi bi-funnel me-2"></i> Filter Orders</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="filterOrderForm">
          <div class="mb-3">
            <label class="form-label fw-semibold">Status</label>
            <select class="form-select" name="status">
              <option value="">All</option>
              <option value="Shipped">Shipped</option>
              <option value="Processing">Processing</option>
              <option value="Pending">Pending</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date From</label>
            <input type="date" class="form-control" name="dateFrom">
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date To</label>
            <input type="date" class="form-control" name="dateTo">
          </div>
          <div class="text-end mt-3">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Apply Filter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  const tableBody = document.getElementById("ordersTableBody");
  const searchInput = document.getElementById("searchOrderInput");

  // Render orders dynamically
  function renderOrders(orders) {
    tableBody.innerHTML = "";

    if (!orders.length) {
      tableBody.innerHTML = `<tr><td colspan="7">No orders found</td></tr>`;
      return;
    }

    orders.forEach((order, index) => {
      tableBody.innerHTML += `
        <tr>
          <td>${index + 1}</td>
          <td class="fw-bold">${order.orderId}</td>
          <td>${order.address?.name || "-"}</td>
          <td>${new Date(order.createdAt).toLocaleDateString()}</td>
          <td>â‚¹ ${order.totalAmount.toLocaleString()}</td>
          <td><span class="badge bg-success">${order.orderStatus}</span></td>
          <td>
            <a href="/admin/orders-management/view-order/${order._id}">
              <button class="btn btn-sm btn-info">
                <i class="bi bi-eye-fill"></i> View
              </button>
            </a>
          </td>
        </tr>
      `;
    });
  }

  // Live Search
  searchInput.addEventListener("keyup", async () => {
    let search = searchInput.value.trim();

    const response = await axios.get("/admin/orders-management", {
      params: { search, ajax: 1 }
    });

    renderOrders(response.data.orders);
  });

  // Apply Filter
  document.getElementById("filterOrderForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const form = new FormData(e.target);

    const status = form.get("status");
    const dateFrom = form.get("dateFrom");
    const dateTo = form.get("dateTo");

    const response = await axios.get("/admin/orders-management", {
      params: { status, dateFrom, dateTo, ajax: 1 }
    });

    renderOrders(response.data.orders);

    // close modal
    const modal = bootstrap.Modal.getInstance(document.getElementById("filterOrderModal"));
    modal.hide();
  });
</script>