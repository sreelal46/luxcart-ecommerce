<style>
  .admin-orders-table {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
  }

  /* Product column handling */
  .admin-orders-table .product-col {
    max-width: 360px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Status badges */
  .status-badge {
    padding: 6px 12px;
    font-size: 0.75rem;
    text-transform: capitalize;
  }

  .status-badge.placed {
    background-color: #198754;
  }

  .status-badge.cancelled {
    background-color: #dc3545;
  }

  .status-badge.shipped {
    background-color: #0d6efd;
  }

  .status-badge.delivered {
    background-color: #20c997;
  }

  /* Table spacing */
  .admin-orders-table th,
  .admin-orders-table td {
    vertical-align: middle;
  }

  /* Hover effect */
  .admin-orders-table tbody tr:hover {
    background-color: #f8f9fa;
  }

  .btn-cancel {
    background-color: #fff;
    border: 2px solid #dc3545;
    color: #dc3545;
  }

  .btn-cancel:hover {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-return {
    background-color: #fff;
    border: 2px solid #0d6efd;
    color: #0d6efd;
  }

  .btn-return:hover {
    background-color: #0d6efd;
    color: #fff;
  }

  .admin-table tbody tr {
    height: 84px;
  }

  .admin-table th,
  .admin-table td {
    padding: 16px 18px;
    vertical-align: middle;
  }

  .admin-table .badge {
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .tooltip-inner {
    background-color: #000;
    color: #fff;
    padding: 6px 12px;
    border-radius: 8px;
    font-weight: 500;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
  }

  .tooltip.bs-tooltip-top .tooltip-arrow::before {
    border-top-color: #000;
  }
</style>

<div class="container py-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Orders Management</h2>
    <div class="d-flex">
      <a href="/admin/orders-management/cancel-request-management">
        <button class="btn btn-cancel btn-md me-2 shadow-sm">
          <i class="bi bi-x-circle me-2"></i> Cancel Requests
        </button>
      </a>

      <a href="/admin/orders-management/return-request-management">
        <button class="btn btn-return btn-md me-2 shadow-sm">
          <i class="bi bi-arrow-repeat me-2"></i> Return Requests
        </button>
      </a>

      <!-- <button class="btn btn-success btn-md shadow-sm">
        <i class="bi bi-download me-2"></i> Export Orders
      </button> -->
    </div>
  </div>

  <!-- Search & Filter -->
  <div class="d-flex justify-content-between mb-3">
    <input type="text" id="searchOrderInput" class="form-control w-50"
      placeholder="Search by Order ID, Customer, Product">
    <button class="btn btn-primary ms-2" data-bs-toggle="modal" data-bs-target="#filterOrderModal">
      <i class="bi bi-funnel"></i> Filter
    </button>
  </div>

  <!-- Orders Table Card -->
  <div class="card shadow-sm mb-5 border-0">
    <div class="card-body table-responsive p-0">

      <table class="table table-hover align-middle mb-0 admin-table">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Items</th>
            <th>Date</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody id="ordersTableBody">
          {{#each orders}}
          <tr>
            <!-- Row Number -->
            <td class="fw-semibold text-muted">
              {{inc @index}}
            </td>

            <!-- Order ID -->
            <td class="fw-semibold text-muted small">
              {{this.orderId}}
            </td>

            <!-- Customer -->
            <td class="fw-semibold text-dark">
              {{this.address.name}}
            </td>

            <!-- Items -->
            <td class="text-muted">
              {{this.items.length}}
            </td>

            <!-- Date -->
            <td class="text-nowrap text-muted">
              {{formattedDate this.createdAt}}
            </td>

            <!-- Actions -->
            <td class="text-center">
              <div class="d-flex justify-content-center align-items-center gap-2">

                <!-- View Order -->
                <div data-bs-toggle="tooltip" title="View order">
                  <a href="/admin/orders-management/view-order/{{this._id}}" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View
                  </a>
                </div>

              </div>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="6" class="text-center text-muted py-4">
              No Orders Found
            </td>
          </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
  </div>

</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterOrderModal" tabindex="-1" aria-labelledby="filterOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-bold" id="filterOrderModalLabel"><i class="bi bi-funnel me-2"></i> Filter Orders</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="filterOrderForm">
          <div class="mb-3">
            <label class="form-label fw-semibold">Status</label>
            <select class="form-select" name="status">
              <option value="">All</option>
              <option value="Shipped">Shipped</option>
              <option value="Processing">Processing</option>
              <option value="Pending">Pending</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date From</label>
            <input type="date" class="form-control" name="dateFrom">
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date To</label>
            <input type="date" class="form-control" name="dateTo">
          </div>
          <div class="text-end mt-3">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Apply Filter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  const tableBody = document.getElementById("ordersTableBody");
  const searchInput = document.getElementById("searchOrderInput");
  function initTooltips() {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
      new bootstrap.Tooltip(el, {
        placement: "top",
        delay: { show: 100, hide: 80 }
      });
    });
  }

  document.addEventListener("DOMContentLoaded", initTooltips);

  // Render orders dynamically
  function renderOrders(orders = []) {
    tableBody.innerHTML = "";

    if (!Array.isArray(orders) || orders.length === 0) {
      tableBody.innerHTML = `
      <tr>
        <td colspan="6" class="text-center text-muted py-4">
          No orders found
        </td>
      </tr>
    `;
      return;
    }

    orders.forEach((order, index) => {
      tableBody.insertAdjacentHTML(
        "beforeend",
        `
      <tr>
        <!-- # -->
        <td class="fw-semibold text-muted">
          ${index + 1}
        </td>

        <!-- Order ID -->
        <td class="fw-semibold text-muted small">
          ${order.orderId}
        </td>

        <!-- Customer -->
        <td class="fw-semibold text-dark">
          ${order.address?.name || "-"}
        </td>

        <!-- Items -->
        <td class="text-muted">
          ${order.items?.length ?? "-"}
        </td>

        <!-- Date -->
        <td class="text-nowrap text-muted">
          ${new Date(order.createdAt).toLocaleDateString()}
        </td>

        <!-- Actions -->
        <td class="text-center">
          <div class="d-flex justify-content-center align-items-center gap-2">

            <!-- View Order -->
            <div data-bs-toggle="tooltip" title="View order">
              <a
                href="/admin/orders-management/view-order/${order._id}"
                class="btn btn-sm btn-outline-primary">
                <i class="bi bi-eye"></i> View
              </a>
            </div>

          </div>
        </td>
      </tr>
      `
      );
    });
    initTooltips()
  }

  // Live Search
  searchInput.addEventListener("keyup", async () => {
    let search = searchInput.value.trim();

    const response = await axios.get("/admin/orders-management", {
      params: { search, ajax: 1 }
    });

    renderOrders(response.data.orders);
    initTooltips()
  });

  // Apply Filter
  document.getElementById("filterOrderForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const form = new FormData(e.target);

    const status = form.get("status");
    const dateFrom = form.get("dateFrom");
    const dateTo = form.get("dateTo");

    const response = await axios.get("/admin/orders-management", {
      params: { status, dateFrom, dateTo, ajax: 1 }
    });

    renderOrders(response.data.orders);

    // close modal
    const modal = bootstrap.Modal.getInstance(document.getElementById("filterOrderModal"));
    modal.hide();
  });
</script>