<style>
  .product-col {
    max-width: 380px;
    white-space: normal;
    word-break: break-word;
  }

  .action-col {
    min-width: 180px;
  }

  .badge {
    font-size: 0.85rem;
    padding: 6px 12px;
    border-radius: 20px;
  }

  .admin-table tbody tr {
    height: 84px;
  }

  .admin-table th,
  .admin-table td {
    padding: 16px 18px;
    vertical-align: middle;
  }

  .admin-table .badge {
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .tooltip-inner {
    background-color: #000;
    color: #fff;
    padding: 6px 12px;
    border-radius: 8px;
    font-weight: 500;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
  }

  .tooltip.bs-tooltip-top .tooltip-arrow::before {
    border-top-color: #000;
  }
</style>

<div class="container py-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Return Requests</h2>
    <div class="d-flex">
      <button class="btn btn-secondary btn-md me-2 shadow-sm" onclick="history.back()">
        <i class="bi bi-arrow-left me-2"></i> Go Back
      </button>
      <button class="btn btn-success btn-md shadow-sm">
        <i class="bi bi-download me-2"></i> Export Orders
      </button>
    </div>
  </div>

  <!-- Search & Filter -->
  <div class="d-flex justify-content-between mb-3">
    <input type="text" id="searchReturnInput" class="form-control w-50"
      placeholder="Search by Order ID, Customer, Product">
    <button class="btn btn-primary ms-2" data-bs-toggle="modal" data-bs-target="#filterReturnModal">
      <i class="bi bi-funnel"></i> Filter
    </button>
  </div>

  <!-- Return Requests Table Card -->
  <div class="container py-5">
    <div class="card shadow-sm mb-5 border-0">
      <div class="card-body table-responsive p-0">

        <table class="table table-hover align-middle mb-0 admin-table">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Product</th>
              <th>Date</th>
              <th>Amount (₹)</th>
              <th>Status</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            {{#each returnedItems}}
            <tr>
              <td class="fw-semibold text-muted">
                {{inc @index}}
              </td>

              <td class="fw-semibold text-muted small">
                {{this.orderId}}
              </td>

              <td class="fw-semibold text-dark">
                {{this.user.name}}
              </td>

              <td class="text-muted">
                {{this.items.productName}}
              </td>

              <td class="text-muted text-nowrap">
                {{formattedDate this.items.return.requestedAt}}
              </td>

              <td class="fw-semibold">
                ₹{{this.items.price}}
              </td>

              <td>
                {{#if this.items.return.approvedAt}}
                <span class="badge bg-success-subtle text-success fw-semibold">
                  Approved
                </span>
                {{else if this.items.return.rejectedAt}}
                <span class="badge bg-danger-subtle text-danger fw-semibold">
                  Rejected
                </span>
                {{else}}
                <span class="badge bg-warning-subtle text-warning fw-semibold">
                  Requested
                </span>
                {{/if}}
              </td>

              <td class="text-center">
                <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">

                  <!-- View Return Reason -->
                  <div data-bs-toggle="tooltip" title="View return reason">
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                      data-bs-target="#viewCancelModal" data-reason="{{this.items.return.reason}}"
                      data-message="{{this.items.return.description}}">
                      <i class="bi bi-eye"></i>
                    </button>
                  </div>

                  {{#unless this.items.return.approvedAt}}
                  {{#unless this.items.return.rejectedAt}}

                  <!-- Approve -->
                  <div data-bs-toggle="tooltip" title="Approve return">
                    <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#approveModal"
                      data-id="{{this.items._id}}" data-orderid="{{this._id}}" data-orderedid="{{this.orderId}}">
                      Approve
                    </button>
                  </div>

                  <!-- Reject -->
                  <div data-bs-toggle="tooltip" title="Reject return">
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#rejectModal"
                      data-id="{{this.items._id}}" data-orderid="{{this._id}}" data-orderedid="{{this.orderId}}">
                      Reject
                    </button>
                  </div>

                  {{/unless}}
                  {{/unless}}

                </div>
              </td>

            </tr>
            {{else}}
            <tr>
              <td colspan="8" class="text-center text-muted py-4">
                No return requests found
              </td>
            </tr>
            {{/each}}
          </tbody>

        </table>

      </div>
    </div>

  </div>

</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterReturnModal" tabindex="-1" aria-labelledby="filterReturnModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title fw-bold" id="filterReturnModalLabel"><i class="bi bi-funnel me-2"></i> Filter Return
          Requests</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="filterReturnForm">
          <div class="mb-3">
            <label class="form-label fw-semibold">Status</label>
            <select class="form-select" name="status">
              <option value="">All</option>
              <option value="Approved">Approved</option>
              <option value="Rejected">Rejected</option>
              <option value="Pending">Pending</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date From</label>
            <input type="date" class="form-control" name="dateFrom">
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Date To</label>
            <input type="date" class="form-control" name="dateTo">
          </div>
          <div class="text-end mt-3">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Apply Filter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- View Return Reason Modal -->
<div class="modal fade" id="viewCancelModal" tabindex="-1" aria-labelledby="viewReturnModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-info text-white">
        <h5 class="modal-title fw-bold" id="viewReturnModalLabel"><i class="bi bi-eye-fill me-2"></i> Return Reason</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label class="form-label fw-semibold">Subject</label>
            <input type="text" class="form-control form-control-lg" id="returnSubject" readonly>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Reason</label>
            <textarea class="form-control form-control-lg" id="returnReason" rows="5" readonly></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<!-- Approve Confirmation Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title fw-bold" id="approveModalLabel"><i class="bi bi-check-circle me-2"></i> Approve Return
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p class="fs-6">Are you sure you want to approve the return for order <strong id="approveOrderId"></strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success rounded-pill" id="confirmApprove">Approve</button>
      </div>
    </div>
  </div>
</div>

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title fw-bold" id="rejectModalLabel"><i class="bi bi-x-circle me-2"></i> Reject Return</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p class="fs-6">Are you sure you want to reject the return for order <strong id="rejectOrderId"></strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger rounded-pill" id="confirmReject">Reject</button>
      </div>
    </div>
  </div>
</div>
<script>
  function initTooltips() {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
      new bootstrap.Tooltip(el, {
        placement: 'top',
        delay: { show: 100, hide: 80 }
      });
    });
  }

  document.addEventListener("DOMContentLoaded", initTooltips);

  const viewModal = document.getElementById("viewCancelModal");

  viewModal.addEventListener("show.bs.modal", function (event) {
    const button = event.relatedTarget;
    const reason = button.getAttribute("data-reason");
    const message = button.getAttribute("data-message");
    document.getElementById("returnReason").value = message || "—";
    document.getElementById("returnSubject").value = reason || "Return Items";
  });

  document.addEventListener("DOMContentLoaded", () => {
    let selectedReturnItemId = null;
    let selectedOrderId = null;

    /* ---------- APPROVE MODAL ---------- */
    const approveModal = document.getElementById("approveModal");
    approveModal.addEventListener("show.bs.modal", function (event) {
      const button = event.relatedTarget;

      selectedReturnItemId = button.getAttribute("data-id");
      const orderedId = button.getAttribute("data-orderedid");
      selectedOrderId = button.getAttribute("data-orderid");

      document.getElementById("approveOrderId").innerText = orderedId;
    });

    document.getElementById("confirmApprove").addEventListener("click", async () => {
      try {
        const res = await axios.patch(
          `/admin/orders-management/return-request-management/${selectedOrderId}/${selectedReturnItemId}/approve`
        );
        if (res.data.success) {
          location.reload()
        }
        else {
          console.log("Error")
        }
      } catch (error) {
        console.error("AXIOS ERROR", error.response || error);
        alert(error.response?.data?.message || "Request failed");
      }

    });

    /* ---------- REJECT MODAL ---------- */
    const rejectModal = document.getElementById("rejectModal");
    rejectModal.addEventListener("show.bs.modal", function (event) {
      const button = event.relatedTarget;


      selectedReturnItemId = button.getAttribute("data-id");
      const orderedId = button.getAttribute("data-orderedid");
      selectedOrderId = button.getAttribute("data-orderid");


      document.getElementById("rejectOrderId").innerText = orderedId;
    });

    document.getElementById("confirmReject").addEventListener("click", async () => {
      try {
        const res = await axios.patch(
          `/admin/orders-management/return-request-management/${selectedOrderId}/${selectedReturnItemId}/reject`
        );

        if (res.data.success) {
          location.reload()
        }
        else {
          alert(res.data.alert || "Request failed");
        }
      } catch (error) {
        console.error("AXIOS ERROR", error.response || error);
        alert(error.response?.data?.message || "Request failed");
      }

    });


  })
</script>