<style>
  /* Force radio buttons to be clickable */
  .radio-container {
    position: relative;
    z-index: 1;
  }

  .radio-container input[type="radio"] {
    position: relative;
    z-index: 2;
    cursor: pointer !important;
    pointer-events: auto !important;
    width: 20px;
    height: 20px;
  }

  .radio-container label {
    cursor: pointer !important;
    user-select: none;
    margin-left: 8px;
  }

  .modal-body {
    position: relative;
    z-index: 1;
  }

  .admin-table tbody tr {
    height: 84px;
    /* baseline admin table height */
  }

  .tooltip-inner {
    background-color: #000;
    color: #fff;
    padding: 6px 12px;
    border-radius: 8px;
    font-weight: 500;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
  }

  .tooltip.bs-tooltip-top .tooltip-arrow::before {
    border-top-color: #000;
  }
</style>


<div class="container-fluid px-4 py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">Category Management</h4>

    <div class="d-flex align-items-center gap-3">
      <!-- Search Bar -->
      <div class="input-group" style="width: 250px;">
        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
        <input type="text" id="searchCategory" class="form-control" placeholder="Search category...">
      </div>

      <!-- Add Category Button -->
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        <i class="bi bi-plus-lg me-1"></i> Add Category
      </button>
    </div>
  </div>

  <!-- Category Table -->
  <div class="card shadow-sm mb-5 border-0">
    <div class="card-body table-responsive p-0">

      <table class="table table-hover align-middle mb-0 admin-table">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Type</th>
            <th class="text-center">Description</th>
            <th class="text-center">Offer</th>
            <th class="text-center">Status</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody id="categoryTable">
          {{#each categories}}
          <tr>
            <td class="fw-semibold text-muted">{{inc @index}}</td>

            <td>
              <div class="fw-semibold text-dark">{{this.name}}</div>
            </td>

            <td>
              <span class="badge bg-light text-dark border">
                {{this.product}}
              </span>
            </td>

            <td class="text-muted">
              {{this.description}}
            </td>


            <td>
              {{#if this.offer.isActive}}

              {{#if (eq this.offer.discountType "Percentage")}}
              <span class="badge rounded-pill bg-success">
                {{this.offer.discountValue}}% OFF
              </span>
              {{else}}
              <span class="badge rounded-pill bg-success">
                ₹ {{formatPrice this.offer.discountValue}} OFF
              </span>
              {{/if}}

              {{else if this.offer.isConfigured}}
              <span class="badge rounded-pill bg-success">
                CONFIGURED
              </span>
              {{else}}
              <span class="badge rounded-pill bg-danger">
                NO OFFERS
              </span>

              {{/if}}
            </td>

            <td>
              {{#if this.isListed}}
              <span class="badge bg-success-subtle text-success fw-semibold">
                Listed
              </span>
              {{else}}
              <span class="badge bg-danger-subtle text-danger fw-semibold">
                Unlisted
              </span>
              {{/if}}
            </td>

            <td class="text-center">
              <div class="d-flex justify-content-center align-items-center gap-2">
                {{#if this.offer.isActive}}
                <div data-bs-toggle="tooltip" title="Remove offer">
                  <button id="removeOffer" class="btn btn-sm btn-outline-danger remove-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#removeOfferModal" data-id="{{this._id}}" data-name="{{this.name}}"
                    data-discount-type="{{this.offer.discountType}}" data-discount-value="{{this.offer.discountValue}}"
                    data-valid-from="{{this.offer.validFrom}}" data-valid-to="{{this.offer.validTo}}">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </div>
                {{else if this.offer.isConfigured}}
                <div data-bs-toggle="tooltip" title="View Configured offer">
                  <button class="btn btn-sm btn-outline-info view-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerViewModal" data-discount-type="{{this.offer.discountType}}"
                    data-discount-value="{{this.offer.discountValue}}" data-valid-from="{{this.offer.validFrom}}"
                    data-valid-to="{{this.offer.validTo}}">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>
                {{else}}
                <div data-bs-toggle="tooltip" title="Add offer">
                  <button id="addOffer" class="btn btn-sm btn-outline-warning add-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerModal" data-id="{{this._id}}" data-name="{{this.name}}">
                    <i class="bi bi-percent"></i>
                  </button>
                </div>
                {{/if}}



                <!-- Edit -->
                <div data-bs-toggle="tooltip" title="Edit category">
                  <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal"
                    data-bs-target="#editCategoryModal" data-id="{{this._id}}" data-name="{{this.name}}"
                    data-description="{{this.description}}" data-type="{{this.product}}">
                    <i class="bi bi-pencil"></i>
                  </button>
                </div>

                <!-- List / Unlist -->
                <div class="form-check form-switch m-0" data-bs-toggle="tooltip"
                  title="{{#if this.isListed}}Unlist category{{else}}List category{{/if}}">
                  <input class="form-check-input category-toggle-status" type="checkbox" data-id="{{this._id}}" {{#if
                    this.isListed}}checked{{/if}} data-bs-toggle="modal" data-bs-target="#confirmListModal">
                </div>

              </div>
            </td>

          </tr>
          {{else}}
          <tr>
            <td colspan="8" class="text-center text-muted py-4">
              No Categories Found
            </td>
          </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
  </div>
  <nav class="mt-4" id="categoryPagination"></nav>
</div>

<!-- Offer Modal -->
<div class="modal fade" id="offerModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <form id="offerForm">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Add Offer</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">

          <input type="hidden" id="offerProductId">

          <div class="mb-3">
            <label class="form-label">Discount Type <span style="color: red;">*</span></label>
            <select class="form-select" name="discountType">
              <option value="Percentage">Percentage (%)</option>
              <option value="Price">Fixed Price</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Discount Value <span style="color: red;">*</span></label>
            <input type="number" class="form-control" name="discountValue">
            <span id="dicountError" style="color: red; font-size: 15px;"></span>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Valid From <span style="color:red">*</span></label>
              <input type="datetime-local" class="form-control" name="validFrom">
              <span id="ValidateFromtError" style="color:red;"></span>
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label">Valid To <span style="color:red">*</span></label>
              <input type="datetime-local" class="form-control" name="validTo">
              <span id="ValidateTotError" style="color:red;"></span>
            </div>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success w-100">
            Apply Offer
          </button>
        </div>
      </form>

    </div>
  </div>
</div>
<!--View  Offer Modal -->
<div class="modal fade" id="offerViewModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title fw-bold">Offer Details</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

        <div class="mb-3">
          <label class="form-label fw-semibold">Discount Type</label>
          <div class="form-control-plaintext" id="viewDiscountType">—</div>
        </div>

        <div class="mb-3">
          <label class="form-label fw-semibold">Discount Value</label>
          <div class="form-control-plaintext" id="viewDiscountValue">—</div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Valid From</label>
            <div class="form-control-plaintext" id="viewValidFrom">—</div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label fw-semibold">Valid To</label>
            <div class="form-control-plaintext" id="viewValidTo">—</div>
          </div>
        </div>

      </div>

      <div class="modal-footer">
        <!-- <button class="btn btn-danger w-100" data-bs-dismiss="modal">
          Delete offer
        </button> -->
        <button class="btn btn-secondary w-100" data-bs-dismiss="modal">
          Close
        </button>
      </div>

    </div>
  </div>
</div>

<!-- Remove Offer Confirmation Modal -->
<div class="modal fade" id="removeOfferModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title fw-bold text-danger">Remove Offer</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">

        <p>
          Are you sure you want to remove the offer from
          <strong id="removeOfferProductName"></strong>?
        </p>

        <hr>

        <!-- OFFER DETAILS (VIEW ONLY) -->
        <div class="mb-2">
          <small class="text-muted">Discount Type</small>
          <div class="fw-semibold" id="removeDiscountType">—</div>
        </div>

        <div class="mb-2">
          <small class="text-muted">Discount Value</small>
          <div class="fw-semibold" id="removeDiscountValue">—</div>
        </div>

        <div class="mb-2">
          <small class="text-muted">Valid From</small>
          <div class="fw-semibold" id="removeValidFrom">—</div>
        </div>

        <div class="mb-2">
          <small class="text-muted">Valid To</small>
          <div class="fw-semibold" id="removeValidTo">—</div>
        </div>

        <input type="hidden" id="removeOfferProductId">
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button class="btn btn-danger" id="confirmRemoveOffer">
          Yes, Remove
        </button>
      </div>

    </div>
  </div>
</div>



<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="addCategoryForm" method="post" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Add New Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div id="addAlert" class="d-none text-center"></div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Category Name <span style="color: red;">*</span></label>
            <input type="text" class="form-control" name="name" id="addName">
            <small class="text-danger" id="nameError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label">Description <span style="color: red;">*</span></label>
            <textarea class="form-control" name="description" id="addDescription" rows="3"></textarea>
            <small class="text-danger" id="descriptionError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label d-block">Product Type <span style="color: red;">*</span></label>
            <div class="radio-container d-inline-block me-4">
              <input type="radio" name="productType" value="Car" id="typeCar">
              <label for="typeCar">Car</label>
            </div>
            <div class="radio-container d-inline-block">
              <input type="radio" name="productType" value="Accessories" id="typeAccessories">
              <label for="typeAccessories">Accessories</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Save Category</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editCategoryForm" method="post">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Edit Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div id="editAlert" class="d-none text-center"></div>
        <div class="modal-body">
          <input type="hidden" id="editCategoryId">
          <div class="mb-3">
            <label class="form-label">Category Name <span style="color: red;">*</span></label>
            <input type="text" id="editCategoryName" name="name" class="form-control">
            <small class="text-danger" id="editNameError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label">Description <span style="color: red;">*</span></label>
            <textarea id="editCategoryDescription" name="description" class="form-control" rows="3"></textarea>
            <small class="text-danger" id="editDescriptionError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label d-block">Product Type <span style="color: red;">*</span></label>
            <div class="radio-container d-inline-block me-4">
              <input type="radio" name="product" id="editTypeCar" value="Car">
              <label for="editTypeCar">Car</label>
            </div>
            <div class="radio-container d-inline-block">
              <input type="radio" name="product" id="editTypeAccessories" value="Accessories">
              <label for="editTypeAccessories">Accessories</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success w-100">Update Category</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- List/Unlist Confirmation Modal -->
<div class="modal fade" id="confirmListModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-bold text-danger">Change Product Status</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to <strong>list/unlist</strong> this product?
      </div>
      <input type="hidden" id="categoriesId">
      <div class="modal-footer border-0">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger" id="categoriesDeleteConfirm">Yes, Confirm</button>
      </div>
    </div>
  </div>
</div>


<script src="/js/admin/categoryManagement.js"></script>