<style>
  /* Force radio buttons to be clickable */
  .radio-container {
    position: relative;
    z-index: 1;
  }

  .radio-container input[type="radio"] {
    position: relative;
    z-index: 2;
    cursor: pointer !important;
    pointer-events: auto !important;
    width: 20px;
    height: 20px;
  }

  .radio-container label {
    cursor: pointer !important;
    user-select: none;
    margin-left: 8px;
  }

  .modal-body {
    position: relative;
    z-index: 1;
  }
</style>


<div class="container-fluid px-4 py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">Category Management</h4>

    <div class="d-flex align-items-center gap-3">
      <!-- Search Bar -->
      <div class="input-group" style="width: 250px;">
        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
        <input type="text" id="searchCategory" class="form-control" placeholder="Search category...">
      </div>

      <!-- Add Category Button -->
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        <i class="bi bi-plus-lg me-1"></i> Add Category
      </button>
    </div>
  </div>

  <!-- Category Table -->
  <div class="card shadow-sm">
    <div class="card-body table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
            <th>Products</th>
            <th>Status</th>
            <th>Offer</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="categoryTable">
          {{#each categories}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.name}}</td>
            <td><span class="badge bg-primary">{{this.product}}</span></td>
            <td>{{this.description}}</td>
            <td>total product</td>
            {{#if this.isListed}}
            <td class="text-success">Listed</td>
            {{else}}
            <td class="text-danger">Unlisted</td>
            {{/if}}
            <td>
              <button class="btn btn-sm btn-outline-info" data-id="{{this._id}}" data-name="{{this.name}}"
                data-bs-toggle="modal" data-bs-target="#addOfferModal">
                <i class="bi bi-tags-fill me-1"></i> Add Offer
              </button>
            </td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal"
                data-bs-target="#editCategoryModal" data-id="{{this._id}}" data-name="{{this.name}}"
                data-description="{{this.description}}" data-type="{{this.product}}">
                <i class="bi bi-pencil-fill"></i>
              </button>
              <button class="btn btn-sm {{#if this.isListed}}btn-outline-warning{{else}}btn-outline-success{{/if}}"
                data-bs-toggle="modal" data-bs-target="#confirmListModal" data-id="{{this._id}}"
                data-status="{{this.isListed}}">
                <i class="bi {{#if this.isListed}}bi-eye-slash-fill{{else}}bi-eye-fill{{/if}}"></i>
              </button>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="8" class="text-center text-muted py-4">No Categories</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <nav class="mt-4" id="categoryPagination"></nav>
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="addCategoryForm" method="post" enctype="multipart/form-data">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Add New Category</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div id="addAlert" class="d-none text-center"></div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" class="form-control" name="name" id="addName" required>
            <small class="text-danger" id="nameError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" id="addDescription" rows="3" required></textarea>
            <small class="text-danger" id="descriptionError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label d-block">Product Type <span class="text-danger">*</span></label>
            <div class="radio-container d-inline-block me-4">
              <input type="radio" name="productType" value="Car" id="typeCar" required>
              <label for="typeCar">Car</label>
            </div>
            <div class="radio-container d-inline-block">
              <input type="radio" name="productType" value="Accessories" id="typeAccessories" required>
              <label for="typeAccessories">Accessories</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Save Category</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editCategoryForm" method="post">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Edit Category</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div id="editAlert" class="d-none text-center"></div>
        <div class="modal-body">
          <input type="hidden" id="editCategoryId">
          <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" id="editCategoryName" name="name" class="form-control" required>
            <small class="text-danger" id="editNameError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea id="editCategoryDescription" name="description" class="form-control" rows="3" required></textarea>
            <small class="text-danger" id="editDescriptionError" style="display: none;"></small>
          </div>
          <div class="mb-3">
            <label class="form-label d-block">Product Type <span class="text-danger">*</span></label>
            <div class="radio-container d-inline-block me-4">
              <input type="radio" name="product" id="editTypeCar" value="Car">
              <label for="editTypeCar">Car</label>
            </div>
            <div class="radio-container d-inline-block">
              <input type="radio" name="product" id="editTypeAccessories" value="Accessories">
              <label for="editTypeAccessories">Accessories</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success w-100">Update Category</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- List/Unlist Confirmation Modal -->
<div class="modal fade" id="confirmListModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-bold text-danger">Change Product Status</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to <strong>list/unlist</strong> this product?
      </div>
      <input type="hidden" id="categoriesId">
      <div class="modal-footer border-0">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger" id="categoriesDeleteConfirm">Yes, Confirm</button>
      </div>
    </div>
  </div>
</div>


