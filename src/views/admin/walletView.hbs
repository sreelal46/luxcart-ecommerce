<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Wallet Transaction History</h2>

  </div>

  <!-- Wallet Table -->
  <div class="card p-3">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Customer</th>
            <th>Last Added Date</th>
            <th>Amount (â‚¹)</th>
          </tr>
        </thead>
        <tbody id="walletTableBody">
          {{#each transactions}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.customer}}</td>
            <td>{{this.date}}</td>
            <td>{{this.amount}}</td>
          </tr>
          {{else}}
          <tr>
            <td colspan="4" class="text-center text-muted py-4">No transactions found</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>