<div class="container py-4">
  <div class="row g-4">
    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            <li class="list-group-item active fw-semibold" id="general-tab" style="cursor:pointer">
              <i class="bi bi-gear-fill me-2"></i> General
            </li>
            <li class="list-group-item fw-semibold" id="banner-tab" style="cursor:pointer">
              <i class="bi bi-image me-2"></i> Banner
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="col-md-9">
      <!-- General Settings -->
      <div id="general-section" class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
          <h4 class="fw-bold mb-4 text-dark">
            <i class="bi bi-gear-wide-connected me-2 text-primary"></i> Site Information
          </h4>
          <form>
            <div class="mb-3">
              <label class="form-label fw-semibold">Website Name</label>
              <input type="text" class="form-control rounded-3" value="LuxCart">
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Email</label>
              <input type="email" class="form-control rounded-3" value="admin@luxcart.com">
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Address</label>
              <textarea class="form-control rounded-3" rows="2">123, MG Road, Kochi, Kerala - 682001</textarea>
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Phone Number</label>
              <input type="text" class="form-control rounded-3" value="+91 9876543210">
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Support Email</label>
              <input type="email" class="form-control rounded-3" value="support@luxcart.com">
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-save me-2"></i>Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Banner Management -->
      <div id="banner-section" class="d-none">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4 class="fw-bold text-dark mb-0">
            <i class="bi bi-images me-2 text-primary"></i>Banner Management
          </h4>
          <button class="btn btn-primary rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#addBannerModal">
            <i class="bi bi-plus-lg me-1"></i> Add Banner
          </button>
        </div>

        <div class="row g-3">
          <!-- Banner Card Example -->
          <div class="col-md-6 col-lg-4 d-flex">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden d-flex flex-column w-100">
              <!-- Media -->
              <img src="https://via.placeholder.com/400x180" class="card-img-top" alt="Banner">
              <!-- Card Body -->
              <div class="card-body d-flex flex-column flex-grow-1">
                <h5 class="card-title">Diwali Offer 2025</h5>
                <p class="card-text mb-1"><strong>Type:</strong> Image</p>
                <p class="card-text mb-1"><strong>Valid:</strong> 10 Oct - 30 Oct 2025</p>
                <p class="card-text mb-2"><strong>Expires In:</strong> 11 days</p>
                <div class="mt-auto d-flex justify-content-between">
                  <button class="btn btn-outline-info btn-sm rounded-pill" data-bs-toggle="modal"
                    data-bs-target="#viewBannerModal1">
                    <i class="bi bi-eye me-1"></i>View
                  </button>
                  <div>
                    <button class="btn btn-outline-primary btn-sm rounded-pill me-1" data-bs-toggle="modal"
                      data-bs-target="#editBannerModal1">
                      <i class="bi bi-pencil-square me-1"></i>Edit
                    </button>
                    <button class="btn btn-outline-danger btn-sm rounded-pill" data-bs-toggle="modal"
                      data-bs-target="#deleteBannerModal1">
                      <i class="bi bi-trash3 me-1"></i>Delete
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Repeat cards as needed for other banners -->

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Banner Modal -->
<div class="modal fade" id="addBannerModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content border-0 rounded-4 shadow-lg">
      <div class="modal-header bg-primary text-white rounded-top-4">
        <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add New Banner</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label fw-semibold">Banner Title</label>
              <input type="text" class="form-control rounded-3" placeholder="Enter banner title">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Type</label>
              <select class="form-select rounded-3">
                <option selected>Image</option>
                <option>Video</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Valid From</label>
              <input type="date" class="form-control rounded-3">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Valid To</label>
              <input type="date" class="form-control rounded-3">
            </div>
            <div class="col-12">
              <label class="form-label fw-semibold">Upload File</label>
              <input type="file" class="form-control rounded-3">
            </div>
          </div>
          <div class="d-flex justify-content-end mt-4">
            <button type="button" class="btn btn-secondary rounded-pill px-4 me-2"
              data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary rounded-pill px-4"><i class="bi bi-save2 me-1"></i>Save
              Banner</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- View Banner Modal -->
<div class="modal fade" id="viewBannerModal1" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content border-0 rounded-4 shadow-lg">
      <div class="modal-header bg-info text-white rounded-top-4">
        <h5 class="modal-title"><i class="bi bi-eye me-2"></i>View Banner</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <img src="https://via.placeholder.com/600x300" class="img-fluid rounded mb-3" alt="Banner">
        <h5>Diwali Offer 2025</h5>
        <p><strong>Type:</strong> Image</p>
        <p><strong>Valid:</strong> 10 Oct - 30 Oct 2025</p>
        <p><strong>Expires In:</strong> 11 days</p>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Banner Modal -->
<div class="modal fade" id="editBannerModal1" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content border-0 rounded-4 shadow-lg">
      <div class="modal-header bg-primary text-white rounded-top-4">
        <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Banner</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label fw-semibold">Banner Title</label>
              <input type="text" class="form-control rounded-3" value="Diwali Offer 2025">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Type</label>
              <select class="form-select rounded-3">
                <option selected>Image</option>
                <option>Video</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Valid From</label>
              <input type="date" class="form-control rounded-3" value="2025-10-10">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-semibold">Valid To</label>
              <input type="date" class="form-control rounded-3" value="2025-10-30">
            </div>
            <div class="col-12">
              <label class="form-label fw-semibold">Upload File</label>
              <input type="file" class="form-control rounded-3">
            </div>
          </div>
          <div class="d-flex justify-content-end mt-4">
            <button type="button" class="btn btn-secondary rounded-pill px-4 me-2"
              data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary rounded-pill px-4"><i class="bi bi-save2 me-1"></i>Save
              Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete Banner Modal -->
<div class="modal fade" id="deleteBannerModal1" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title"><i class="bi bi-trash3 me-2"></i>Delete Banner</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <p>Are you sure you want to delete this banner?</p>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger rounded-pill">Yes, Delete</button>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f8f9fa;
  }

  .list-group-item {
    border: none;
    border-radius: 0;
    padding: 1rem 1.2rem;
    transition: background-color 0.3s, color 0.3s;
  }

  .list-group-item:hover {
    background-color: #f1f3f5;
  }

  .list-group-item.active {
    background-color: #0d6efd;
    color: white;
  }

  .card-img-top,
  video {
    object-fit: cover;
    height: 180px;
  }

  .card {
    display: flex;
    flex-direction: column;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .mt-auto {
    margin-top: auto;
  }

  .btn-sm {
    min-width: 60px;
  }
</style>

<script>
  document.getElementById("general-tab").addEventListener("click", function () {
    document.getElementById("general-section").classList.remove("d-none");
    document.getElementById("banner-section").classList.add("d-none");
    this.classList.add("active");
    document.getElementById("banner-tab").classList.remove("active");
  });

  document.getElementById("banner-tab").addEventListener("click", function () {
    document.getElementById("general-section").classList.add("d-none");
    document.getElementById("banner-section").classList.remove("d-none");
    this.classList.add("active");
    document.getElementById("general-tab").classList.remove("active");
  });
</script>