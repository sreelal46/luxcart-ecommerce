<style>
  body {
    background-color: #f5f7fb;
    font-family: "Poppins", sans-serif;
  }

  .card {
    transition: all 0.25s ease-in-out;
  }

  .card:hover {
    transform: translateY(-3px);
  }

  .icon-circle {
    width: 60px;
    height: 60px;
    line-height: 60px;
    border-radius: 50%;
    margin: 0 auto;
  }

  .table th {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .table td {
    font-size: 0.9rem;
    vertical-align: middle;
  }

  .page-link {
    border-radius: 50% !important;
    margin: 0 2px;
  }

  .btn-outline-secondary:hover {
    background-color: #f8f9fa;
  }

  .admin-table tbody tr {
    height: 84px;
  }

  .admin-table th,
  .admin-table td {
    padding: 16px 18px;
    vertical-align: middle;
  }

  .admin-table th {
    font-weight: 600;
  }

  .admin-table .badge {
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
  }
</style>

<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-dark">
      <i class="bi bi-person-lines-fill me-2 text-primary"></i>User Profile
    </h3>
    <a href="/admin/users" class="btn btn-outline-secondary rounded-pill px-3 shadow-sm">
      <i class="bi bi-arrow-left me-1"></i>Back
    </a>
  </div>

  <div class="row g-4">

    <!-- LEFT PROFILE CARD -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
        <div class="card-body text-center bg-white py-5">

          <div class="position-relative d-inline-block mb-3">
            <img src="{{user.profileImage_url}}" class="rounded-circle border border-3 border-primary shadow-sm"
              width="130" height="130">

            {{#unless user.isBlocked}}
            <span
              class="position-absolute bottom-0 end-0 translate-middle p-2 bg-success border border-light rounded-circle"
              title="Active User"></span>
            {{/unless}}
          </div>

          <h5 class="fw-bold text-dark mb-1">{{user.name}}</h5>
          <p class="text-muted small mb-4">
            {{#if user.isBlocked}}Blocked User{{else}}Active User{{/if}}
          </p>

          <div class="d-flex justify-content-center gap-2 mb-3">
            {{#if user.isBlocked}}
            <button class="btn btn-outline-success btn-sm rounded-pill px-3" data-bs-toggle="modal"
              data-bs-target="#unblockModal" data-id="{{user._id}}" data-user="{{user.name}}" data-action="unblock">
              <i class="bi bi-person-check me-1"></i>Unblock
            </button>
            {{else}}
            <button class="btn btn-outline-danger btn-sm rounded-pill px-3" data-bs-toggle="modal"
              data-bs-target="#blockModal" data-id="{{user._id}}" data-user="{{user.name}}" data-action="block">
              <i class="bi bi-person-dash me-1"></i>Block
            </button>
            {{/if}}
          </div>

          <hr class="my-4">

          <div class="text-start px-3 small">
            <p class="mb-4">
              <i class="bi bi-envelope text-primary me-2"></i>
              <strong>Email:</strong> {{user.email}}
            </p>

            {{#if user.phoneNumber}}
            <p class="mb-4">
              <i class="bi bi-telephone text-success me-2"></i>
              <strong>Phone:</strong> {{user.phoneNumber}}
            </p>
            {{/if}}

            {{#if user.dob}}
            <p class="mb-4">
              <i class="bi bi-calendar-event text-info me-2"></i>
              <strong>DOB:</strong> {{user.dob}}
            </p>
            {{/if}}

            <p class="mb-0">
              <i class="bi bi-clock-history text-warning me-2"></i>
              <strong>Joined:</strong> {{formattedDate user.createdAt}}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT CONTENT -->
    <div class="col-lg-8">

      <!-- STATS -->
      <div class="row g-3 mb-4">

        <div class="col-md-6">
          <div class="card border-0 shadow-sm rounded-4 text-center h-100 bg-light">
            <div class="card-body py-4">
              <div class="icon-circle bg-success bg-opacity-10 text-success mb-3">
                <i class="bi bi-cash-coin fs-3"></i>
              </div>
              <h6 class="fw-semibold text-muted">Total Money Spent</h6>
              <h3 class="fw-bold text-dark mt-1">₹{{totalSpent}}</h3>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card border-0 shadow-sm rounded-4 text-center h-100 bg-light">
            <div class="card-body py-4">
              <div class="icon-circle bg-primary bg-opacity-10 text-primary mb-3">
                <i class="bi bi-bag-check fs-3"></i>
              </div>
              <h6 class="fw-semibold text-muted">Total Orders</h6>
              <h3 class="fw-bold text-dark mt-1">{{user.orderCount}}</h3>
            </div>
          </div>
        </div>

      </div>

      <!-- TRANSACTION HISTORY -->
      <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">

          <h5 class="fw-bold mb-3">
            <i class="bi bi-clock-history me-2 text-secondary"></i>Transaction History
          </h5>

          <div class="card shadow-sm mb-5 border-0">
            <div class="card-body table-responsive p-0">

              <table class="table table-hover align-middle mb-0 admin-table">
                <thead class="table-light">
                  <tr>
                    <th>#</th>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th class="text-end">Amount (₹)</th>
                    <th>Status</th>
                  </tr>
                </thead>

                <tbody>
                  {{#each orders}}
                  <tr>
                    <td class="fw-semibold text-muted">
                      {{inc @index}}
                    </td>

                    <td class="fw-semibold text-dark">
                      {{this.orderId}}
                    </td>

                    <td class="text-muted text-nowrap">
                      {{formatDate this.createdAt}}
                    </td>

                    <td class="fw-semibold text-end">
                      ₹{{this.totalAmount}}
                    </td>

                    <td>
                      {{#if (eq this.paymentStatus "paid")}}
                      <span class="badge bg-success-subtle text-success fw-semibold">
                        Paid
                      </span>
                      {{else if (eq this.paymentStatus "pending")}}
                      <span class="badge bg-warning-subtle text-warning fw-semibold">
                        Pending
                      </span>
                      {{else}}
                      <span class="badge bg-danger-subtle text-danger fw-semibold">
                        Failed
                      </span>
                      {{/if}}
                    </td>
                  </tr>
                  {{else}}
                  <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                      No transactions found
                    </td>
                  </tr>
                  {{/each}}
                </tbody>

              </table>

            </div>
          </div>


        </div>
      </div>

    </div>
  </div>
</div>


<!-- Block Modal -->
<div class="modal fade" id="blockModal" tabindex="-1" aria-labelledby="blockModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="blockModalLabel"><i class="bi bi-person-x me-2"></i>Block User</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center py-4">
        <p class="fs-6 mb-0">Are you sure you want to <strong>block</strong> this user?</p>
      </div>
      <div class="modal-footer border-0">
        <button class="btn btn-secondary rounded-pill px-3" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger rounded-pill px-3">Yes, Block</button>
      </div>
    </div>
  </div>
</div>

<!-- Unblock Modal -->
<div class="modal fade" id="unblockModal" tabindex="-1" aria-labelledby="unblockModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="unblockModalLabel"><i class="bi bi-person-check me-2"></i>Unblock User</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center py-4">
        <p class="fs-6 mb-0">Do you want to <strong>unblock</strong> this user?</p>
      </div>
      <div class="modal-footer border-0">
        <button class="btn btn-secondary rounded-pill px-3" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-success rounded-pill px-3">Yes, Unblock</button>
      </div>
    </div>
  </div>
</div>


<script>
  let currentUserId = "";
  let currentUserName = "";
  let currentAction = "";

  // Handle BOTH block & unblock modals
  document.addEventListener("show.bs.modal", function (event) {
    const button = event.relatedTarget;
    if (!button) return;

    currentUserId = button.getAttribute("data-id");
    currentUserName = button.getAttribute("data-user");
    currentAction = button.getAttribute("data-action"); // block | unblock
  });

  // BLOCK USER
  document
    .querySelector("#blockModal .btn-danger")
    .addEventListener("click", async function () {
      await handleBlockUnblock();
    });
  // UNBLOCK USER
  document
    .querySelector("#unblockModal .btn-success")
    .addEventListener("click", async function () {
      await handleBlockUnblock();
    });

  async function handleBlockUnblock() {
    try {
      const res = await axios.patch(
        `/admin/users-management/block-unblock-user/${currentUserId}`
      );

      if (res.data.success) {
        const openModalEl = document.querySelector(".modal.show");
        if (openModalEl) {
          const modalInstance = bootstrap.Modal.getInstance(openModalEl);
          modalInstance.hide();
        }
        await Swal.fire({
          title: `User ${res.data.status}!`,
          text: `${currentUserName} has been successfully ${res.data.status.toLowerCase()}.`,
          icon: "success",
          timer: 1800,
          showConfirmButton: false,
        });

        window.location.reload();
      }
    } catch (error) {
      console.error("Error:", error);

      Swal.fire({
        title: "Error!",
        text: "Something went wrong while updating the user status.",
        icon: "error",
        confirmButtonColor: "#ef4444",
      });
    }
  }
</script>