<link rel="stylesheet" href="/css/admin/products/productManagement.css">

<div class="container-fluid px-4 py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">Product Management</h4>

    <div class="d-flex align-items-center gap-3">
      <!-- Search -->
      <div class="input-group" style="width: 260px;">
        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
        <input type="text" id="searchProduct" class="form-control" placeholder="Search product, type, brand...">
      </div>

      <!-- Filter Button -->
      <!-- <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#filterModal">
        <i class="bi bi-funnel-fill me-1"></i> Filter
      </button> -->

      <!-- Add Product Button -->
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productTypeModal">
        <i class="bi bi-plus-lg me-1"></i> Add Product
      </button>
    </div>
  </div>
  <div class="mb-3">
    <!-- <button id="showAllProduct" class="toggle-btn active">All</button>
    <button id="showCars" class="toggle-btn">Cars</button>
    <button id="showAccessories" class="toggle-btn">Accessory</button> -->
  </div>

  <!-- All products Table -->
  <div id="allProductTable" class="card shadow-sm mb-5 border-0">
    <div class="card-body table-responsive p-0">

      <table class="table table-hover align-middle mb-0 admin-table">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Product</th>
            <th>Category</th>
            <th>Brand</th>
            <th class="text-center">Price</th>
            <!-- <th class="text-center">Stock</th> -->
            <th class="text-center">Offer</th>
            <th class="text-center">Status</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          {{#each fullProducts}}
          <tr>
            <td class="fw-semibold text-muted">{{inc @index}}</td>

            <td>
              <div class="fw-semibold text-dark">{{this.name}}</div>
            </td>

            <td class="text-muted">{{this.category_id.name}}</td>
            <td class="text-muted">{{this.brand_id.name}}</td>

            {{#if this.engine}}
            <td class="text-end fw-semibold">₹ {{formatPrice this.variantIds.[0].price}}</td>
            {{else}}
            <td class="text-end fw-semibold">₹ {{formatPrice this.price}}</td>
            {{/if}}

            <td>

              {{#if this.engine}}
              {{#if this.variantIds.[0].productOffer.isActive}}
              {{#if (eq this.variantIds.[0].appliedOffer.discountType "Percentage")}}
              <span class="badge rounded-pill bg-success">
                {{this.variantIds.[0].appliedOffer.discountValue}}% OFF
              </span>
              {{else}}
              <span class="badge rounded-pill bg-success">
                ₹ {{formatPrice this.variantIds.[0].appliedOffer.discountValue}} OFF
              </span>
              {{/if}}
              {{else if this.variantIds.[0].productOffer.isConfigured}}
              <span class="badge rounded-pill bg-success">
                CONFIGUERD
              </span>
              {{else}}
              <span class="badge rounded-pill bg-danger">
                NO OFFER
              </span>
              {{/if}}
              {{else}}
              {{#if this.productOffer.isActive}}
              {{#if (eq this.appliedOffer.discountType "Percentage")}}
              <span class="badge rounded-pill bg-success">
                {{this.appliedOffer.discountValue}}% OFF
              </span>
              {{else}}
              <span class="badge rounded-pill bg-success">
                ₹ {{formatPrice this.appliedOffer.discountValue}} OFF
              </span>
              {{/if}}
              {{else if this.productOffer.isConfigured}}
              <span class="badge rounded-pill bg-success">
                CONFIGUERD
              </span>
              {{else}}
              <span class="badge rounded-pill bg-danger">
                NO OFFER
              </span>
              {{/if}}
              {{/if}}
            </td>

            <td>
              {{#if this.isListed}}
              <span class="badge bg-success-subtle text-success fw-semibold">
                Listed
              </span>
              {{else}}
              <span class="badge bg-danger-subtle text-danger fw-semibold">
                Unlisted
              </span>
              {{/if}}
            </td>

            <td class="text-center">
              <div class="d-flex justify-content-center align-items-center gap-2">
                {{#if this.engine}}
                {{#if this.variantIds.[0].productOffer.isActive}}
                <!-- Add Offer -->
                <div data-bs-toggle="tooltip" title="Remove offer">
                  <button class="btn btn-sm btn-outline-danger remove-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#removeOfferModal" data-id="{{this._id}}"
                    data-discount-type="{{this.variantIds.[0].productOffer.discountType}}"
                    data-discount-value="{{this.variantIds.[0].productOffer.discountValue}}"
                    data-valid-from="{{this.variantIds.[0].productOffer.validFrom}}"
                    data-valid-to="{{this.variantIds.[0].productOffer.validTo}}" data-productid="{{this._id}}"
                    data-producttype="car" data-name="{{this.name}}">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </div>

                {{else if this.variantIds.[0].productOffer.isConfigured}}
                <div data-bs-toggle="tooltip" title="View configured offer">
                  <button class="btn btn-sm btn-outline-info view-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerViewModal"
                    data-discount-type="{{this.variantIds.[0].productOffer.discountType}}"
                    data-discount-value="{{this.variantIds.[0].productOffer.discountValue}}"
                    data-valid-from="{{this.variantIds.[0].productOffer.validFrom}}"
                    data-valid-to="{{this.variantIds.[0].productOffer.validTo}}" data-productid="{{this._id}}"
                    data-producttype="car" data-name="{{this.name}}">

                    <i class="bi bi-eye"></i>
                  </button>
                </div>

                {{else}}
                <div data-bs-toggle="tooltip" title="Add offer">
                  <button class="btn btn-sm btn-outline-warning add-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerModal" data-id="{{this._id}}" data-producttype="car"
                    data-name="{{this.name}}">
                    <i class="bi bi-percent"></i>
                  </button>
                </div>
                {{/if}}
                {{else}}
                {{#if this.offer.productOffer.isActive}}
                <div data-bs-toggle="tooltip" title="Remove offer">
                  <button class="btn btn-sm btn-outline-danger remove-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#removeOfferModal" data-id="{{this._id}}" data-name="{{this.name}}"
                    data-discount-type="{{this.productOffer.discountType}}"
                    data-discount-value="{{this.productOffer.discountValue}}"
                    data-valid-from="{{this.productOffer.validFrom}}" data-valid-to="{{this.productOffer.validTo}}"
                    data-producttype="accessory">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </div>

                {{else if this.productOffer.isConfigured}}
                <div data-bs-toggle="tooltip" title="View configured offer">
                  <button class="btn btn-sm btn-outline-info view-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerViewModal" data-discount-type="{{this.productOffer.discountType}}"
                    data-discount-value="{{this.productOffer.discountValue}}" data-name="{{this.name}}"
                    data-valid-from="{{this.productOffer.validFrom}}" data-valid-to="{{this.productOffer.validTo}}"
                    data-producttype="accessory">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>

                {{else}}
                <div data-bs-toggle="tooltip" title="Add offer">
                  <button class="btn btn-sm btn-outline-warning add-offer-btn" data-bs-toggle="modal"
                    data-bs-target="#offerModal" data-id="{{this._id}}" data-producttype="accessory"
                    data-name="{{this.name}}">
                    <i class="bi bi-percent"></i>
                  </button>
                </div>
                {{/if}}
                {{/if}}


                {{#if this.engine}}

                <!-- View Car -->
                <div data-bs-toggle="tooltip" title="View product">
                  <a href="/admin/products-management/view-car-product/{{this._id}}"
                    class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i>
                  </a>
                </div>

                <!-- Edit Car -->
                <div data-bs-toggle="tooltip" title="Edit product">
                  <a href="/admin/products-management/edit-car-product/{{this._id}}"
                    class="btn btn-sm btn-outline-success">
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>

                {{else}}

                <!-- View Accessory -->
                <div data-bs-toggle="tooltip" title="View product">
                  <a href="/admin/products-management/view-accessories-product/{{this._id}}"
                    class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i>
                  </a>
                </div>

                <!-- Edit Accessory -->
                <div data-bs-toggle="tooltip" title="Edit product">
                  <a href="/admin/products-management/edit-accessories-product/{{this._id}}"
                    class="btn btn-sm btn-outline-success">
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>

                {{/if}}

                <!-- List / Unlist -->
                <div class="form-check form-switch m-0" data-bs-toggle="tooltip"
                  title="{{#if this.isListed}}Unlist product{{else}}List product{{/if}}">
                  <input class="form-check-input" type="checkbox" data-id="{{this._id}}" {{#if
                    this.isListed}}checked{{/if}} data-bs-toggle="modal" data-bs-target="#confirmListModal">
                </div>

              </div>
            </td>


          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>


