<style>
  .image-box {
    width: 120px;
    height: 80px;
    border-radius: 12px;
    overflow: hidden;
    background-color: #f8f9fa;
    position: relative;
    display: inline-block;
    margin: 5px;
  }

  .image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .remove-image-btn {
    position: absolute;
    top: 2px;
    right: 2px;
    background: rgba(255, 0, 0, 0.8);
    border: none;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-size: 14px;
    line-height: 18px;
    cursor: pointer;
    z-index: 10;
  }

  .add-image-btn {
    width: 120px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px dashed #6c757d;
    border-radius: 12px;
    cursor: pointer;
    margin: 5px;
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    align-items: center;
    justify-content: center;
  }

  .modal-content {
    background: #fff;
    padding: 15px;
    border-radius: 10px;
    max-width: 600px;
    width: 90%;
  }

  .card-header {
    font-size: 1.1rem;
    color: #0d6efd;
    background-color: #f1f3f5 !important;
  }
</style>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h2 class="fw-bold mb-4 text-center text-primary">Edit Car Product</h2>

      <form id="editCarProduct" enctype="multipart/form-data">
        <input type="hidden" name="product_id" value="{{singleCar._id}}">

        {{#each singleCar.variantIds}}
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Variant: {{color}} <span style="color: red;">*</span></div>
          <div class="card-body">
            <input type="hidden" name="variant_id_{{@index}}" value="{{this._id}}">

            <div id="image-container-{{@index}}">
              {{#each image_url}}
              <div class="image-box">
                <img src="{{this}}" alt="Car Image" />
                <button type="button" class="remove-image-btn">&times;</button>
              </div>
              {{/each}}
              <div class="add-image-btn" data-variant="{{@index}}">+ Add Image</div>
            </div>

            <div class="row g-3 mt-3">
              <div class="col-md-4">
                <label>Price (₹) <span style="color: red;">*</span></label>
                <input type="number" name="variant_{{@index}}_price" value="{{price}}" class="form-control" />
              </div>
              <div class="col-md-4">
                <label>Stock <span style="color: red;">*</span></label>
                <input type="number" name="variant_{{@index}}_stock" value="{{stock}}" class="form-control" />
              </div>
              <div class="col-md-4">
                <label>Color <span style="color: red;">*</span></label>
                <input type="text" name="variant_{{@index}}_color" value="{{color}}" class="form-control" />
              </div>
            </div>
          </div>
        </div>
        {{/each}}

        <!-- Basic Info -->
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Basic Info</div>
          <div class="card-body row g-3">
            <div class="col-md-4">
              <label>Brand <span style="color: red;">*</span></label>
              <select name="brand" class="form-select">
                {{#each brands}}
                <option value="{{this._id}}" {{#if (eq this._id ../singleCar.brand_id._id)}}selected{{/if}}>
                  {{this.name}}
                </option>
                {{/each}}
              </select>
            </div>
            <div class="col-md-4">
              <label>Category <span style="color: red;">*</span></label>
              <select name="category" class="form-select">
                {{#each categories}}
                <option value="{{this._id}}" {{#if (eq this._id ../singleCar.category_id._id)}}selected{{/if}}>
                  {{this.name}}
                </option>
                {{/each}}
              </select>
            </div>
            <div class="col-md-4">
              <label>Product Type <span style="color: red;">*</span></label>
              <select name="product_type" class="form-select">
                {{#each types}}
                <option value="{{this._id}}" {{#if (eq this._id ../singleCar.product_type_id._id)}}selected{{/if}}>
                  {{this.name}}
                </option>
                {{/each}}
              </select>
            </div>
            <div class="col-md-12">
              <label>Description <span style="color: red;">*</span></label>
              <textarea name="description" class="form-control" rows="3">{{singleCar.description}}</textarea>
            </div>
            <div class="col-md-4">
              <label>Offer Price (₹)</label>
              <input type="number" name="offer_price" value="{{singleCar.offer_price}}" class="form-control" />
            </div>
          </div>
        </div>

        <!-- Quick Info -->
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Quick Info</div>
          <div class="card-body row g-3">
            <div class="col-md-3">
              <label>Year <span style="color: red;">*</span></label>
              <input type="number" name="year" value="{{singleCar.year}}" class="form-control" />
            </div>
            <div class="col-md-3">
              <label>Mileage <span style="color: red;">*</span></label>
              <input type="text" name="mileage" value="{{singleCar.mileage}}" class="form-control" />
            </div>
            <div class="col-md-3">
              <label>Warranty <span style="color: red;">*</span></label>
              <input type="text" name="warranty" value="{{singleCar.warranty}}" class="form-control" />
            </div>
            <div class="col-md-3">
              <label>Region <span style="color: red;">*</span></label>
              <input type="text" name="region" value="{{singleCar.region}}" class="form-control" />
            </div>
          </div>
        </div>

        <!-- Performance -->
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Performance</div>
          <div class="card-body row g-3">
            <div class="col-md-3"><label>Top Speed <span style="color: red;">*</span></label><input type="text"
                name="top_speed" value="{{singleCar.top_speed}}" class="form-control" /></div>
            <div class="col-md-3"><label>Power (HP) <span style="color: red;">*</span></label><input type="text"
                name="power_hp" value="{{singleCar.power_hp}}" class="form-control" /></div>
            <div class="col-md-3"><label>Engine <span style="color: red;">*</span></label><input type="text"
                name="engine" value="{{singleCar.engine}}" class="form-control" /></div>
            <div class="col-md-3"><label>Transmission <span style="color: red;">*</span></label><input type="text"
                name="transmission" value="{{singleCar.transmission}}" class="form-control" /></div>
            <div class="col-md-3"><label>Drive Type <span style="color: red;">*</span></label><input type="text"
                name="drive_type" value="{{singleCar.drive_type}}" class="form-control" /></div>
            <div class="col-md-3"><label>Torque <span style="color: red;">*</span></label><input type="text"
                name="torque" value="{{singleCar.torque}}" class="form-control" /></div>
            <div class="col-md-3"><label>Acceleration 0–100 <span style="color: red;">*</span></label><input type="text"
                name="acceleration_0_100" value="{{singleCar.acceleration_0_100}}" class="form-control" /></div>
          </div>
        </div>

        <!-- Exterior & Interior -->
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Exterior & Interior</div>
          <div class="card-body row g-3">
            <div class="col-md-4"><label>Colors Available <span style="color: red;">*</span></label><input type="text"
                name="interiorAndExteriorColor" value="{{singleCar.interiorAndExteriorColor}}" class="form-control" />
            </div>
            <div class="col-md-4"><label>Wheels <span style="color: red;">*</span></label><input type="text"
                name="wheels" value="{{singleCar.wheels}}" class="form-control" /></div>
            <div class="col-md-4"><label>Upholstery <span style="color: red;">*</span></label><input type="text"
                name="upholstery" value="{{singleCar.upholstery}}" class="form-control" /></div>
            <div class="col-md-12"><label>Design <span style="color: red;">*</span></label><input type="text"
                name="design" value="{{singleCar.design}}" class="form-control" /></div>
          </div>
        </div>

        <!-- Tech & Assistance -->
        <div class="card shadow-sm mb-4 border-0">
          <div class="card-header bg-light fw-semibold">Tech & Assistance</div>
          <div class="card-body row g-3">
            <div class="col-md-3"><label>Cameras <span style="color: red;">*</span></label><input type="text"
                name="cameras" value="{{singleCar.cameras}}" class="form-control" /></div>
            <div class="col-md-3"><label>Lane Assist <span style="color: red;">*</span></label>
              <select class="form-select" name="lane_assist">
                <option value="true" {{#if singleCar.lane_assist}}selected{{/if}}>Yes</option>
                <option value="false" {{#unless singleCar.lane_assist}}selected{{/unless}}>No</option>
              </select>
            </div>
            <div class="col-md-3"><label>Sound System <span style="color: red;">*</span></label><input type="text"
                name="sound_system" value="{{singleCar.sound_system}}" class="form-control" /></div>
            <div class="col-md-3">
              <label>Keyless Go</label>
              <select class="form-select" name="keyless_go">
                <option value="true" {{#if singleCar.keyless_go}}selected{{/if}}>Yes</option>
                <option value="false" {{#unless singleCar.keyless_go}}selected{{/unless}}>No</option>
              </select>
            </div>
          </div>
        </div>

        <div class="text-center mt-4">
          <a href="/admin/products-management" class="btn btn-outline-secondary me-2 px-4">Cancel</a>
          <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Cropper Modal -->
<div class="modal" id="cropperModal">
  <div class="modal-content">
    <h5>Crop Image</h5>
    <div style="width:100%; max-height:400px;">
      <img id="cropperImage" style="max-width:100%; display:block; margin:auto;">
    </div>
    <div class="mt-2 text-end">
      <button id="cropCancel" class="btn btn-secondary">Cancel</button>
      <button id="cropSave" class="btn btn-primary">Crop & Save</button>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>


<script src="/js/admin/product/car/editCarProduct.js"></script>