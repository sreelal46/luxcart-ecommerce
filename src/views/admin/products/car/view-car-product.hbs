<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2 class="mb-4">Car Product Details</h2>

      <!-- Image Gallery -->
      <div class="mb-4">
        <h5>Images</h5>
        <div class="d-flex flex-wrap gap-3">
          {{#each singleCar.variantIds.[0].image_url}}
          <img src="{{this}}" alt="Car Image 1" class="img-thumbnail" style="width: 300px; height: auto;">
          {{/each}}
          <!-- Add more images as needed -->
        </div>
      </div>

      <!-- Basic Info -->
      <div class="mb-4">
        <h5>Basic Info</h5>
        <ul class="list-group">
          <li class="list-group-item"><strong>Price:</strong> ₹{{singleCar.variantIds.[0].price}}</li>
          <li class="list-group-item"><strong>Stock:</strong>{{singleCar.variantIds.[0].stock}} units</li>
          <li class="list-group-item"><strong>Color:</strong> {{singleCar.variantIds.[0].color}}</li>
          <li class="list-group-item"><strong>Brand:</strong>{{singleCar.brand_id.name}}</li>
          <li class="list-group-item"><strong>Category:</strong>{{singleCar.category_id.name}}</li>
          <li class="list-group-item"><strong>Product Type:</strong>{{singleCar.product_type_id.name}}</li>
          <li class="list-group-item"><strong>Description:</strong>{{singleCar.description}}</li>
          <li class="list-group-item"><strong>Offer Price:</strong>₹{{singleCar.offer_price}}</li>
        </ul>
      </div>

      <!-- Quick Info -->
      <div class="mb-4">
        <h5>Quick Info</h5>
        <ul class="list-group">
          <li class="list-group-item"><strong>Year:</strong>{{singleCar.year}}</li>
          <li class="list-group-item"><strong>Mileage:</strong>{{singleCar.mileage}}</li>
          <li class="list-group-item"><strong>Warranty:</strong>{{singleCar.warranty}}</li>
          <li class="list-group-item"><strong>Region:</strong>{{singleCar.region}}</li>
        </ul>
      </div>

      <!-- Performance -->
      <div class="mb-4">
        <h5>Performance</h5>
        <ul class="list-group">
          <li class="list-group-item"><strong>Top Speed:</strong>{{singleCar.top_speed}}</li>
          <li class="list-group-item"><strong>Power (HP):</strong>{{singleCar.power_hp}}</li>
          <li class="list-group-item"><strong>Engine:</strong>{{singleCar.engine}}</li>
          <li class="list-group-item"><strong>Transmission:</strong>{{singleCar.transmission}}</li>
          <li class="list-group-item"><strong>Drive Type:</strong>{{singleCar.drive_type}}</li>
          <li class="list-group-item"><strong>Torque:</strong>{{singleCar.torque}}</li>
          <li class="list-group-item"><strong>Acceleration 0-100:</strong> {{singleCar.acceleration_0_100}}</li>
        </ul>
      </div>

      <!-- Exterior & Interior -->
      <div class="mb-4">
        <h5>Exterior & Interior</h5>
        <ul class="list-group">
          <li class="list-group-item"><strong>Colors Available:</strong>{{singleCar.interiorAndExteriorColor}}</li>
          <li class="list-group-item"><strong>Wheels:</strong>{{singleCar.wheels}}</li>
          <li class="list-group-item"><strong>Upholstery:</strong>{{singleCar.upholstery}}</li>
          <li class="list-group-item"><strong>Design:</strong>{{singleCar.design}}</li>
        </ul>
      </div>

      <!-- Tech & Assistance -->
      <div class="mb-4">
        <h5>Tech & Assistance</h5>
        <ul class="list-group">
          <li class="list-group-item">Cameras: {{singleCar.cameras}}</li>
          <li class="list-group-item">Lane Assist: {{singleCar.lane_assist}}</li>
          <li class="list-group-item">Sound System:{{singleCar.sound_system}}</li>
          <li class="list-group-item">Keyless Go:{{singleCar.keyless_go}}</li>
        </ul>
      </div>

      <!-- Action buttons -->
      <a href="/admin/products-management" class="btn btn-secondary me-2">Back to Products</a>
      <a href="/admin/products/edit" class="btn btn-primary">Edit Product</a>
    </div>
  </div>
</div>