<style>
  .image-box {
    width: 320px;
    height: 220px;
    border-radius: 12px;
    overflow: hidden;
    background-color: #f8f9fa;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-box:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    font-size: 1.1rem;
    color: #0d6efd;
    background-color: #f1f3f5 !important;
  }

  .list-group-item {
    border: none;
    border-bottom: 1px solid #e9ecef;
    font-size: 0.95rem;
  }

  .list-group-item strong {
    color: #212529;
    width: 180px;
    display: inline-block;
  }
</style>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h2 class="fw-bold mb-4 text-center text-primary">
        Car Product Details
      </h2>

      <!-- Image Gallery -->
      <!-- Image Gallery -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Images</div>
        <div class="card-body">
          {{#each singleCar.variantIds}}
          <div class="mb-3">
            <h6 class="fw-semibold">Variant: {{color}} - ₹{{price}}</h6>
            <div class="row g-3 justify-content-center">
              {{#each image_url}}
              <div class="col-4">
                <div class="image-box shadow-sm rounded-3 overflow-hidden">
                  <img src="{{this}}" alt="Car Image" class="img-fluid" />
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>

      <!-- Variant Info -->
      {{#each singleCar.variantIds}}
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Variant Info - {{color}}</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Price:</strong> ₹{{price}}</li>
          <li class="list-group-item"><strong>Stock:</strong> {{stock}}</li>
          <li class="list-group-item"><strong>Color:</strong> {{color}}</li>
        </ul>
      </div>
      {{/each}}



      <!-- Basic Info -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Basic Info</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Price:</strong> ₹{{singleCar.variantIds.[0].price}}</li>
          <li class="list-group-item"><strong>Stock:</strong> {{singleCar.variantIds.[0].stock}} units</li>
          <li class="list-group-item"><strong>Color:</strong> {{singleCar.variantIds.[0].color}}</li>
          <li class="list-group-item"><strong>Brand:</strong> {{singleCar.brand_id.name}}</li>
          <li class="list-group-item"><strong>Category:</strong> {{singleCar.category_id.name}}</li>
          <li class="list-group-item"><strong>Product Type:</strong> {{singleCar.product_type_id.name}}</li>
          <li class="list-group-item"><strong>Description:</strong> {{singleCar.description}}</li>
          <li class="list-group-item"><strong>Offer Price:</strong> ₹{{singleCar.offer_price}}</li>
        </ul>
      </div>

      <!-- Quick Info -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Quick Info</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Year:</strong> {{singleCar.year}}</li>
          <li class="list-group-item"><strong>Mileage:</strong> {{singleCar.mileage}}</li>
          <li class="list-group-item"><strong>Warranty:</strong> {{singleCar.warranty}}</li>
          <li class="list-group-item"><strong>Region:</strong> {{singleCar.region}}</li>
        </ul>
      </div>

      <!-- Performance -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Performance</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Top Speed:</strong> {{singleCar.top_speed}}</li>
          <li class="list-group-item"><strong>Power (HP):</strong> {{singleCar.power_hp}}</li>
          <li class="list-group-item"><strong>Engine:</strong> {{singleCar.engine}}</li>
          <li class="list-group-item"><strong>Transmission:</strong> {{singleCar.transmission}}</li>
          <li class="list-group-item"><strong>Drive Type:</strong> {{singleCar.drive_type}}</li>
          <li class="list-group-item"><strong>Torque:</strong> {{singleCar.torque}}</li>
          <li class="list-group-item"><strong>Acceleration 0–100:</strong> {{singleCar.acceleration_0_100}}</li>
        </ul>
      </div>

      <!-- Exterior & Interior -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Exterior & Interior</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Colors Available:</strong> {{singleCar.interiorAndExteriorColor}}</li>
          <li class="list-group-item"><strong>Wheels:</strong> {{singleCar.wheels}}</li>
          <li class="list-group-item"><strong>Upholstery:</strong> {{singleCar.upholstery}}</li>
          <li class="list-group-item"><strong>Design:</strong> {{singleCar.design}}</li>
        </ul>
      </div>

      <!-- Tech & Assistance -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold">Tech & Assistance</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Cameras:</strong> {{singleCar.cameras}}</li>
          <li class="list-group-item"><strong>Lane Assist:</strong> {{singleCar.lane_assist}}</li>
          <li class="list-group-item"><strong>Sound System:</strong> {{singleCar.sound_system}}</li>
          <li class="list-group-item"><strong>Keyless Go:</strong> {{singleCar.keyless_go}}</li>
        </ul>
      </div>

      <!-- Action buttons -->
      <div class="text-center mt-4">
        <a href="/admin/products-management" class="btn btn-outline-secondary me-2 px-4">Back</a>
        <a href="/admin/products-management/edit-car-product/{{singleCar._id}}" class="btn btn-primary px-4">Edit
          Product</a>
      </div>
    </div>
  </div>
</div>