<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h2 class="fw-bold mb-4 text-center">Accessory Product Details</h2>

      <!-- Image Gallery -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold fs-5">Images</div>
        <div class="card-body">
          <div class="d-flex flex-wrap gap-3">
            {{#each accessory.images}}
            <div class="image-box shadow-sm rounded overflow-hidden">
              <img src="{{this}}" alt="{{../accessory.name}}" class="img-fluid"
                style="width: 180px; height: 120px; object-fit: cover;" />
            </div>
            {{/each}}
          </div>
        </div>
      </div>

      <!-- Basic Info -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold fs-5">Basic Information</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Name:</strong> {{accessory.name}}</li>
          <li class="list-group-item"><strong>Price:</strong> â‚¹{{accessory.price}}</li>
          <li class="list-group-item"><strong>Material:</strong> {{accessory.material}}</li>
          <li class="list-group-item"><strong>Stock:</strong> {{accessory.stock}} units</li>
          <li class="list-group-item"><strong>Category:</strong> {{accessory.category_id.name}}</li>
          <li class="list-group-item"><strong>Product Type:</strong> {{accessory.product_type_id.name}}</li>
          <li class="list-group-item"><strong>Brand:</strong> {{accessory.brand_id.name}}</li>
          <li class="list-group-item"><strong>Description:</strong> {{accessory.description}}</li>
        </ul>
      </div>

      <!-- Specification -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold fs-5">Specifications</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Country of Origin:</strong> {{accessory.country_of_origin}}</li>
          <li class="list-group-item"><strong>Fabric:</strong> {{accessory.fabric}}</li>
          <li class="list-group-item"><strong>Finish:</strong> {{accessory.finish}}</li>
          <li class="list-group-item"><strong>Fitting:</strong> {{accessory.fitting}}</li>
          <li class="list-group-item"><strong>Warranty:</strong> {{accessory.warranty}}</li>
          <li class="list-group-item">
            <strong>Waterproof:</strong>
            {{#if accessory.waterproof}}Yes{{else}}No{{/if}}
          </li>
        </ul>
      </div>

      <!-- Vehicle Compatibility -->
      <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-light fw-semibold fs-5">Vehicle Compatibility</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Vehicle:</strong> {{accessory.vehicle}}</li>
          <li class="list-group-item"><strong>Production Year:</strong> {{accessory.production_year}}</li>
        </ul>
      </div>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-end gap-3 mt-4">
        <a href="/admin/products-management" class="btn btn-outline-secondary px-4">
          <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
        <a href="/admin/products-management/edit-accessories-product/{{accessory._id}}" class="btn btn-primary px-4">
          <i class="bi bi-pencil-square me-1"></i> Edit Accessory
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .image-box:hover img {
    transform: scale(1.05);
    transition: 0.3s ease;
  }

  .card-header {
    border-bottom: 1px solid #e9ecef;
  }
</style>